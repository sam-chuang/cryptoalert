{
  "name": "cryptoalert",
  "version": "0.0.1",
  "description": "",
  "type": "module",
  "scripts": {
    "start": "npm-run-all build:index-page build:esm --parallel build:js:watch start:server",
    "start:server": "es-dev-server --watch --root-dir dist --open index.html",
    "build:esm": "snowpack --include \"src/**/*.js\" --dest dist/web_modules --hash --source-map",
    "build:js": "babel src/ --out-dir dist",
    "build:js:watch": "babel src/ --out-dir dist --watch",
    "build:index-page": "node --experimental-modules index.html.js"
  },
  "dependencies": {
    "htm": "^3.0.3",
    "hyperapp": "^2.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "babel-plugin-htm": "^3.0.0",
    "es-dev-server": "^1.43.0",
    "fs-extra": "^8.1.0",
    "jest": "^25.1.0",
    "jest-chain": "^1.1.5",
    "jest-extended": "^0.11.5",
    "move-cli": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "snowpack": "^1.6.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./test.config.js"
    ]
  },
  "homepage": "https://github.com/sam-chuang/cryptoalert#readme"
}
